<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Category", "Index", "Categories")</li>
                    <li>@Html.ActionLink("Survey", "Index", "Surveys")</li>
                    <li>@Html.ActionLink("Question", "Index", "Questions")</li>
                    <li>@Html.ActionLink("OptionQuestion", "Index", "OptionQuestions")</li>
                    <li>@Html.ActionLink("AnswerSubmit", "Index", "AnswerSubmits")</li>
                    <li>@Html.ActionLink("TextAnswer", "Index", "TextAnswers")</li>
                    <li>@Html.ActionLink("ApplicationUser", "Index", "ApplicationUsers")</li>
                    <li>@Html.ActionLink("User Survey", "Index", "UserSurveys")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
